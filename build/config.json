{
  "productName": "VK Desktop",
  "appId": "ru.danyadev.vkdesktop",
  "artifactName": "VK Desktop ${os} ${arch}.${ext}",
  "electronVersion": "18.3.1",
  "npmRebuild": false,
  "asar": true,
  "directories": {
    "output": "app"
  },
  "files": [
    "package.json",
    "!node_modules",
    { "from": "app", "to": "", "filter": "index.js" },
    { "from": "app/dist", "to": "dist", "filter": "**/*" }
  ],
  "extraMetadata": {
    "main": "index.js"
  },
  "win": {
    "target": [{
      "target": "dir",
      "arch": ["x64", "ia32"]
    }]
  },
  "linux": {
    "target": [{
      "target": "zip",
      "arch": ["x64", "ia32"]
    }]
  },
  "mac": {
    "category": "public.app-category.social-networking",
    "gatekeeperAssess": true,
    "target": {
      "target": "dmg",
      "arch": ["arm64", "x64"]
    },
    "electronLanguages": ["ru", "en", "uk"]
  }
}
