{
  "name": "vk-desktop-dev",
  "version": "1.0.0-dev.0",
  "description": "Мессенджер ВКонтакте",
  "main": "app/index.js",
  "scripts": {
    "dev": "vite",
    "build": "yarn run dist && yarn run pack",
    "tsc": "tsc --noEmit",
    "lint:eslint": "eslint -c .eslintrc.full.js src main-process scripts *.{js,mts} --ext .js,.ts,.tsx,.mjs",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "generate-schemes": "node ./scripts/generateSchemes.mjs",
    "dist": "yarn run tsc && vite build",
    "pack": "electron-builder --config build/config.json",
    "win-setup": "yarn win-setup64 && yarn win-setup32",
    "win-setup64": "innosetup-compiler build/config-x64.iss --verbose",
    "win-setup32": "innosetup-compiler build/config-ia32.iss --verbose",
    "postinstall": "husky install"
  },
  "repository": "https://github.com/danyadev/vk-desktop",
  "author": "danyadev <danyadev@mail.ru>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs}": "eslint -c .eslintrc.full.js",
    "*.css": "stylelint"
  },
  "dependencies": {
    "@electron/remote": "2.1.1",
    "pinia": "2.1.7",
    "vue": "3.4.1",
    "vue-router": "4.2.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "@vitejs/plugin-vue-jsx": "3.1.0",
    "@vkontakte/appearance": "https://github.com/VKCOM/Appearance#9.58.0",
    "@vue/compiler-sfc": "3.4.1",
    "electron": "22.3.27",
    "electron-builder": "24.10.0",
    "eslint": "8.56.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "npm:eslint-plugin-i",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "innosetup-compiler": "6.2.0",
    "lightningcss": "1.22.1",
    "lint-staged": "15.2.0",
    "stylelint": "16.1.0",
    "stylelint-config-standard": "36.0.0",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vite-plugin-electron": "0.15.5",
    "vite-plugin-electron-renderer": "0.14.5"
  }
}
