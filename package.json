{
  "name": "vk-desktop-dev",
  "version": "1.0.0-alpha.0",
  "description": "Мессенджер ВКонтакте",
  "main": "app/index.js",
  "scripts": {
    "dev": "vite",
    "build": "yarn run dist && yarn run pack",
    "tsc": "tsc --noEmit",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "lint:eslint": "eslint -c eslint.config.full.mjs src main-process scripts *.{mjs,mts}",
    "lint:stylelint": "stylelint src/**/*.css --quiet-deprecation-warnings",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "dist": "yarn run tsc && vite build",
    "pack": "electron-builder --config build/config.json",
    "win-setup": "yarn win-setup64 && yarn win-setup32",
    "win-setup64": "innosetup-compiler build/config-x64.iss --verbose",
    "win-setup32": "innosetup-compiler build/config-ia32.iss --verbose",
    "postinstall": "husky && node ./scripts/moveVkuiTokens.mjs"
  },
  "repository": "https://github.com/danyadev/vk-desktop",
  "author": "danyadev <danyadev@mail.ru>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "yarn": "^1.22.22"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs,mts}": [
      "eslint -c eslint.config.full.mjs",
      "vitest related --run"
    ],
    "*.css": "stylelint"
  },
  "dependencies": {
    "@electron/remote": "2.1.3",
    "@floating-ui/dom": "1.7.4",
    "@vkontakte/vk-qr": "2.1.1",
    "pinia": "3.0.3",
    "vue": "https://pkg.pr.new/danyadev/vuejs-core/vue@37fda96",
    "vue-router": "4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@stylistic/stylelint-config": "3.0.1",
    "@stylistic/stylelint-plugin": "4.0.0",
    "@types/wicg-file-system-access": "2023.10.7",
    "@vitejs/plugin-vue-jsx": "5.1.1",
    "@vkontakte/vkui-tokens": "4.70.0",
    "@vue/compiler-sfc": "https://pkg.pr.new/danyadev/vuejs-core/@vue/compiler-sfc@37fda96",
    "electron": "22.3.27",
    "electron-builder": "26.0.15",
    "eslint": "9.37.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "innosetup-compiler": "6.3.1",
    "lightningcss": "1.30.2",
    "lint-staged": "16.2.3",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0",
    "user-agent-data-types": "0.4.2",
    "vite": "7.1.9",
    "vite-plugin-electron": "0.29.0",
    "vite-plugin-electron-renderer": "0.14.6",
    "vitest": "3.2.4"
  }
}
