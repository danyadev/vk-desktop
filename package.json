{
  "name": "vk-desktop",
  "version": "1.0.0-dev.0",
  "description": "Мессенджер ВКонтакте",
  "main": "app/index.js",
  "scripts": {
    "dev": "vite",
    "build": "yarn run dist && yarn run pack",
    "lint:eslint": "eslint -c .eslintrc.full.js src main-process scripts .eslintrc.js .eslintrc.full.js vite.config.ts --ext .js,.ts,.tsx,.mjs",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "generate-schemes": "node ./scripts/generateSchemes.mjs",
    "dist": "vite build",
    "pack": "electron-builder --config build/config.json",
    "win-setup": "yarn win-setup64 && yarn win-setup32",
    "win-setup64": "innosetup-compiler build/config-x64.iss --verbose",
    "win-setup32": "innosetup-compiler build/config-ia32.iss --verbose",
    "postinstall": "husky install"
  },
  "repository": "https://github.com/danyadev/vk-desktop",
  "author": "danyadev <danyadev@mail.ru>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^14.17.0 || >=16.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs}": "eslint -c .eslintrc.full.js",
    "*.css": "stylelint"
  },
  "dependencies": {
    "@electron/remote": "2.0.9",
    "pinia": "2.0.28",
    "vue": "3.2.45",
    "vue-router": "4.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "@vitejs/plugin-vue-jsx": "3.0.0",
    "@vkontakte/appearance": "https://github.com/VKCOM/Appearance#9.51.4",
    "electron": "18.3.15",
    "electron-builder": "23.6.0",
    "eslint": "8.30.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "npm:eslint-plugin-i",
    "husky": "8.0.2",
    "innosetup-compiler": "6.2.0",
    "lint-staged": "13.1.0",
    "stylelint": "14.16.0",
    "stylelint-config-standard": "29.0.0",
    "typescript": "4.9.4",
    "vite": "4.0.3",
    "vite-plugin-electron": "0.9.3",
    "vite-svg-loader": "4.0.0"
  }
}
