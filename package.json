{
  "name": "vk-desktop-dev",
  "version": "1.0.0-dev.0",
  "description": "Мессенджер ВКонтакте",
  "main": "app/index.js",
  "scripts": {
    "dev": "vite",
    "build": "yarn run dist && yarn run pack",
    "tsc": "tsc --noEmit",
    "lint:eslint": "eslint -c .eslintrc.full.js src main-process scripts *.{js,ts} --ext .js,.ts,.tsx,.mjs",
    "lint:stylelint": "stylelint src/**/*.css",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "generate-schemes": "node ./scripts/generateSchemes.mjs",
    "dist": "yarn run tsc && vite build",
    "pack": "electron-builder --config build/config.json",
    "win-setup": "yarn win-setup64 && yarn win-setup32",
    "win-setup64": "innosetup-compiler build/config-x64.iss --verbose",
    "win-setup32": "innosetup-compiler build/config-ia32.iss --verbose",
    "postinstall": "husky install"
  },
  "repository": "https://github.com/danyadev/vk-desktop",
  "author": "danyadev <danyadev@mail.ru>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs}": "eslint -c .eslintrc.full.js",
    "*.css": "stylelint"
  },
  "dependencies": {
    "@electron/remote": "2.0.9",
    "pinia": "2.0.36",
    "vue": "3.3.2",
    "vue-router": "4.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "@vitejs/plugin-vue-jsx": "3.0.1",
    "@vkontakte/appearance": "https://github.com/VKCOM/Appearance#9.58.0",
    "@vue/compiler-sfc": "3.3.2",
    "electron": "20.3.12",
    "electron-builder": "23.6.0",
    "eslint": "8.40.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "npm:eslint-plugin-i",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "innosetup-compiler": "6.2.0",
    "lint-staged": "13.2.2",
    "stylelint": "15.6.1",
    "stylelint-config-standard": "33.0.0",
    "tsc": "2.0.4",
    "typescript": "5.0.4",
    "vite": "4.3.5",
    "vite-plugin-electron": "0.11.2",
    "vite-plugin-electron-renderer": "0.14.2"
  }
}
