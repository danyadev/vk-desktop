{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": ["vite/client"],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },

  "include": ["src/**/*", "main-process/**/*", "scripts/*", ".eslintrc.js", "vite.config.ts"],
  "exclude": ["node_modules"]
}
