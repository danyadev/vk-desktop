{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "preserve",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
  },

  "include": ["src/**/*", "main-process/**/*", ".eslintrc.js", "webpack.config.js"],
  "exclude": ["node_modules"]
}
